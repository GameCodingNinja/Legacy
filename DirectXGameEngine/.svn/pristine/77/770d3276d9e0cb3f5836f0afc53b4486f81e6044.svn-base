
/************************************************************************
*    FILE NAME:       devicemovement.h
*
*    DESCRIPTION:     device movement check class
************************************************************************/

#ifndef __device_movement_h__
#define __device_movement_h__

class CDeviceMovement
{
public:
    int mouseX;
    int mouseY;
    int mouseZ;

    // Analog Stick 1
    int gamepad1X;
    int gamepad1Y;

    // Analog Stick 2
    int gamepad2X;
    int gamepad2Y;

    // 360 triggers
    int left360Trigger;
    int right360Trigger;

    void Reset()
    {
        mouseX = 0;
        mouseY = 0;
        mouseZ = 0;
        gamepad1X = 0;
        gamepad1Y = 0;
        gamepad2X = 0;
        gamepad2Y = 0;
        left360Trigger = 0;
        right360Trigger = 0;
    }
};

#endif  // __device_movement_h__


