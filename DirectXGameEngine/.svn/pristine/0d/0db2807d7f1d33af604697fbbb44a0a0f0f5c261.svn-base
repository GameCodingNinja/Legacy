/************************************************************************
*    FILE NAME:       hotspotwarp.h
*
*    DESCRIPTION:     Hot spot warp class
************************************************************************/

// Physical component dependency
#include <3d/hotspotwarp.h>

// Required namespace(s)
using namespace std;

// Turn off the data type conversion warning (ie. int to float, float to int etc.)
// We do this all the time in 3D. Don't need to be bugged by it all the time.
#pragma warning(disable : 4244)

/************************************************************************
*    desc:  Constructer                                                             
************************************************************************/
CHotSpotWarp::CHotSpotWarp()
{
}   // Constructer


/************************************************************************
*    desc:  Destructer                                                             
************************************************************************/
CHotSpotWarp::~CHotSpotWarp()
{
}   // Destructer


/************************************************************************
*    desc:  Set the position of the camera after touching the hotspot
*
*	 param:	CPoint pos - position of the camera
************************************************************************/
void CHotSpotWarp::SetCameraPos( CPoint pos )
{
    camera_pos = pos;

}	// SetCameraPos


/************************************************************************
*    desc:  Get the position of the camera after touching the hotspot
*
*	 ret:	CPoint camera_pos - position of the camera
************************************************************************/
CPoint CHotSpotWarp::GetCameraPos()
{
    return camera_pos;

}	// GetCameraPos


/************************************************************************
*    desc:  Set the rotation of the camera after touching the hotspot
*
*	 param:	CPoint rot - rotation of the camera
************************************************************************/
void CHotSpotWarp::SetCameraRot( CPoint rot )
{
    camera_rot = rot;

}	// SetCameraRot


/************************************************************************
*    desc:  Get the rotation of the camera after touching the hotspot
*
*	 ret:	CPoint camera_rot - rotation of the camera
************************************************************************/
CPoint CHotSpotWarp::GetCameraRot()
{
    return camera_rot;

}	// GetCameraRot


/************************************************************************
*    desc:  Save the filepath of the destination for future reference
*
*	 param:	string dest - filepath of the destination stage
************************************************************************/
void CHotSpotWarp::SetDestination( string dest )
{
    destination = dest;

}	// SetDestination


/************************************************************************
*    desc:  Return the filepath of the destination
*
*	 ret:	string destination - filepath of the destination stage
************************************************************************/
string CHotSpotWarp::GetDestination()
{
    return destination;

}	// SetDestination


