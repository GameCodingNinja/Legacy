<menu>

  <menuType type="exclusive"/>
  <menuNavigation nextAction="Menu Right" previousAction="Menu Left"/>
  <menuCollision width="303" height="335"/>
  
  <menuControls> <!--///////////////////////////////////////////////////////////////////////////////////////////////////////-->

    <!-- Quit Game Label -->
    <control controltype="label" defaultState="inactive">
      <filePath file="data\objects\2d\menus\controls\label.ctrl"/>
      <position x="0" y="40" z="0"/>
      <fontStringLst>
        <string text="Do you want to|quit the game?"/>
      </fontStringLst>
    </control>

    <!-- No Button -->
    <control controltype="button" defaultState="inactive">
      <filePath file="data\objects\2d\menus\controls\button_120x52_persistant_frame.ctrl"/>
      <position x="70" y="-70" z="0"/>
      <fontStringLst>
        <string text="No"/>
      </fontStringLst>
      <action actionType="return" executionAction="quit_back_button"/>
    </control>
    
    <!-- Yes Button -->
    <control controltype="button" defaultState="inactive">
      <filePath file="data\objects\2d\menus\controls\button_120x52_persistant_frame.ctrl"/>
      <position x="-70" y="-70" z="0"/>
      <fontStringLst>
        <string text="Yes"/>
      </fontStringLst>
      <action actionType="return" executionAction="exit_game"/>
    </control>
    
  </menuControls> <!--///////////////////////////////////////////////////////////////////////////////////////////////////////-->

  
  <staticSprites> <!--///////////////////////////////////////////////////////////////////////////////////////////////////-->

    <sprite objectGroup="(menu)" objectType="540x294_menu_bg">
      <position x="0" y="0" z="0"/>
      <scale defaultScale="1"/>
    </sprite>

  </staticSprites> <!--//////////////////////////////////////////////////////////////////////////////////////////////////-->
  
  
</menu>

