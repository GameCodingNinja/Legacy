<menu>

  <menuType type="exclusive"/>
  <menuNavigation nextAction="menu_down" previousAction="menu_up"/>
  
  <menuControls> <!--///////////////////////////////////////////////////////////////////////////////////////////////////////-->

    <!-- Bind Button Label -->
    <control controltype="label" defaultState="inactive">
      <filePath file="data\objects\2d\menus\controls\label.ctrl"/>
      <position x="0" y="0" z="0"/>
      <fontStringLst>
        <string text="Press the button of|the selected device to bind|it to the desired action.||Press Esc to cancel."/>
      </fontStringLst>
    </control>
    
  </menuControls> <!--///////////////////////////////////////////////////////////////////////////////////////////////////////-->

  
  <staticSprites> <!--///////////////////////////////////////////////////////////////////////////////////////////////////-->

    <sprite objectGroup="(menu)" objectType="full_screen_bg">
      <position x="0" y="0" z="0"/>
      <scale defaultScale="1"/>
    </sprite>
    
  </staticSprites> <!--//////////////////////////////////////////////////////////////////////////////////////////////////-->
  
  
</menu>

