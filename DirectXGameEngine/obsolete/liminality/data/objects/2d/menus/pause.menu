<menu>

  <menuType type="exclusive"/>
  <menuNavigation nextAction="Menu Down" previousAction="Menu Up"/>
  <menuCollision width="290" height="360"/>
  
  <menuControls> <!--///////////////////////////////////////////////////////////////////////////////////////////////////////-->

    <!-- Pause Label -->
    <control controltype="label" defaultState="inactive">
      <filePath file="data\objects\2d\menus\controls\label.ctrl"/>
      <position x="0" y="130" z="0"/>
      <fontStringLst>
        <string text="Pause"/>
      </fontStringLst>
    </control>

    <!-- Continue Button -->
    <control controltype="button" defaultState="inactive">
      <filePath file="data\objects\2d\menus\controls\button_240x52.ctrl"/>
      <position x="0" y="70" z="0"/>
      <fontStringLst>
        <string text="Continue"/>
      </fontStringLst>
      <action actionType="return" executionAction="continue"/>
    </control>

    <!-- Save Game Button -->
    <control controltype="button" defaultState="inactive">
      <filePath file="data\objects\2d\menus\controls\button_240x52.ctrl"/>
      <position x="0" y="18" z="0"/>
      <fontStringLst>
        <string text="Save Game"/>
      </fontStringLst>
      <action actionType="to_menu" executionAction="save_menu"/>
    </control>

    <!-- Load Game Button -->
    <control controltype="button" defaultState="disabled">
      <filePath file="data\objects\2d\menus\controls\button_240x52.ctrl"/>
      <position x="0" y="-34" z="0"/>
      <fontStringLst>
        <string text="Load Game"/>
      </fontStringLst>
      <action actionType="to_menu" executionAction="load_game_menu"/>
    </control>

    <!-- Settings Button -->
    <control controltype="button" defaultState="inactive">
      <filePath file="data\objects\2d\menus\controls\button_240x52.ctrl"/>
      <position x="0" y="-86" z="0"/>
      <fontStringLst>
        <string text="Settings"/>
      </fontStringLst>
      <action actionType="to_menu" executionAction="settings_menu"/>
    </control>

    <!-- Exit Game Button -->
    <control controltype="button" defaultState="inactive">
      <filePath file="data\objects\2d\menus\controls\button_240x52.ctrl"/>
      <position x="0" y="-138" z="0"/>
      <fontStringLst>
        <string text="Exit Game"/>
      </fontStringLst>
      <action actionType="to_menu" executionAction="quit_menu"/>
    </control>

  </menuControls> <!--///////////////////////////////////////////////////////////////////////////////////////////////////////-->

  
  <staticSprites> <!--///////////////////////////////////////////////////////////////////////////////////////////////////-->
    
    <sprite objectGroup="(menu)" objectType="290x360_menu_bg">
      <position x="0" y="0" z="0"/>
      <scale defaultScale="1"/>
    </sprite>
    
  </staticSprites> <!--//////////////////////////////////////////////////////////////////////////////////////////////////-->
  
  
</menu>

